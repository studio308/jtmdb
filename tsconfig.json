{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./lib",
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "src/__tests__/**"
  ]
}
